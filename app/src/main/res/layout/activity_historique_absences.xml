<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_login"
    android:padding="16dp">

    <!-- Centered Card Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardHistorique"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigation"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        android:backgroundTint="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:text="Historique des absences"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginBottom="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Filters Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical"
                android:divider="?android:attr/dividerHorizontal"
                android:showDividers="middle">

                <Spinner
                    android:id="@+id/spinnerHistoriqueDate"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:padding="8dp" />

                <Spinner
                    android:id="@+id/spinnerHistoriqueSeance"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:padding="8dp" />

                <Spinner
                    android:id="@+id/spinnerHistoriqueGroupe"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Show Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAfficherHistorique"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Afficher"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginBottom="24dp"
                android:backgroundTint="@color/dark_green"
                app:cornerRadius="28dp"
                app:elevation="8dp" />

            <!-- Search Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:startIconDrawable="@android:drawable/ic_menu_search"
                app:startIconTint="@color/dark_green"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="#F4F6F8"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/searchEtudiant"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Rechercher un étudiant"
                    android:textColor="#333"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewHistorique"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:clipToPadding="false"
                android:padding="8dp"
                android:contentDescription="Tableau des absences filtrées par date et groupe" />

            <!-- General Remarks -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="#F4F6F8"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextRemarqueGeneraleHistorique"
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:hint="Remarque générale du groupe"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:textColor="#333"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Back Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRetourAbsence"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Retour"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginTop="32dp"
                android:backgroundTint="@color/dark_green"
                app:cornerRadius="28dp"
                app:elevation="8dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Bottom Navigation Footer -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-16dp"
        android:layout_marginEnd="-16dp"
        android:layout_marginBottom="-16dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="8dp"
        android:elevation="8dp">

        <LinearLayout
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                app:tint="@color/dark_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accueil"
                android:textColor="@color/dark_green"
                android:textSize="10sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/searchButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                app:tint="@color/dark_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recherche"
                android:textColor="@color/dark_gray"
                android:textSize="10sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_menu"
                app:tint="@color/dark_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textColor="@color/dark_gray"
                android:textSize="10sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>