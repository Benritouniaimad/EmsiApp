<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- MapView with contentDescription -->
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/map_description" />

    <!-- CardView container for buttons -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="24dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_locate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:backgroundTint="@color/dark_green"
                android:fontFamily="@font/poppins_semibold"
                android:padding="16dp"
                android:text="Localiser Moi"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:cornerRadius="28dp"
                app:elevation="8dp"
                app:icon="@drawable/ic_my_location"
                app:iconGravity="textStart"
                app:iconPadding="16dp"
                app:iconTint="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_directions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:padding="16dp"
                android:text="ItinÃ©raire"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="10sp"
                android:textAllCaps="false"
                android:backgroundTint="@color/dark_green"
                app:cornerRadius="28dp"
                app:elevation="8dp"
                app:icon="@drawable/ic_directions"
                app:iconGravity="textStart"
                app:iconPadding="16dp"
                app:iconTint="@color/white" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
