<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Main Content ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigation"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titre_emploi"
                android:textSize="24sp"
                android:textColor="@color/dark_green"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginBottom="24dp" />

            <!-- Card container for inputs and buttons -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:backgroundTint="@color/white"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <!-- Spinner Année -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/annee_scolaire"
                        android:textColor="@color/dark_green"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="16sp"
                        android:layout_marginBottom="6dp" />
                    <Spinner
                        android:id="@+id/spinnerAnnee"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:spinnerMode="dropdown"
                        android:background="@drawable/spinner_rounded_background"
                        android:contentDescription="@string/spinner_annee_desc"
                        android:layout_marginBottom="16dp" />

                    <!-- Spinner Semestre -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/semestre"
                        android:textColor="@color/dark_green"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="16sp"
                        android:layout_marginBottom="6dp" />
                    <Spinner
                        android:id="@+id/spinnerSemestre"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:spinnerMode="dropdown"
                        android:background="@drawable/spinner_rounded_background"
                        android:contentDescription="@string/spinner_semestre_desc"
                        android:layout_marginBottom="24dp" />

                    <!-- Bouton Afficher -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAfficherEmploi"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="@string/afficher_emploi"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:backgroundTint="@color/dark_green"
                        app:cornerRadius="28dp"
                        app:elevation="6dp"
                        android:layout_marginBottom="24dp" />

                    <!-- TableLayout inside ScrollView -->
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="24dp"
                        android:background="@android:color/white"
                        android:padding="8dp"
                        android:clipToPadding="false"
                        android:clipChildren="false"
                        android:elevation="2dp"
                        android:scrollbars="vertical"
                        android:importantForAccessibility="no">

                        <TableLayout
                            android:id="@+id/tableLayoutEmploi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:stretchColumns="*"
                            android:shrinkColumns="*" />
                    </ScrollView>

                    <!-- Bouton Télécharger PDF -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTelechargerPDF"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="@string/telecharger_pdf"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:backgroundTint="@color/dark_green"
                        app:cornerRadius="28dp"
                        app:elevation="6dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation Footer -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="8dp"
        android:elevation="8dp">

        <LinearLayout
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                app:tint="@color/dark_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accueil"
                android:textColor="@color/dark_gray"
                android:textSize="10sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/searchButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                app:tint="@color/dark_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recherche"
                android:textColor="@color/dark_green"
                android:textSize="10sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_menu"
                app:tint="@color/dark_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textColor="@color/dark_gray"
                android:textSize="10sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>