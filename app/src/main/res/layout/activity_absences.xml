<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_login"
    android:padding="16dp">

    <!-- Floating Elements for Visual Appeal -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:layout_marginStart="30dp"
        android:alpha="0.1"
        android:src="@drawable/ic_book1"
        app:tint="@color/white" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="40dp"
        android:alpha="0.1"
        android:src="@drawable/ic_graduation_cap"
        app:tint="@color/white" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="50dp"
        android:alpha="0.1"
        android:src="@drawable/ic_calendar"
        app:tint="@color/white" />

    <!-- Scrollable main content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="40dp"
            android:gravity="center">

            <!-- Logo/Character Section -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp">

                <!-- Character Shadow -->
                <View
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:alpha="0.2"
                    android:background="@drawable/shadow_oval" />

                <!-- Professor Character -->
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:contentDescription="EMSI Logo"
                    android:src="@drawable/professor_character"
                    android:background="@drawable/circle_white_background"
                    android:padding="8dp" />

                <!-- Floating Greeting -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="-5dp"
                    android:layout_marginEnd="-10dp"
                    android:background="@drawable/chat_bubble_green"
                    android:text="Gestion!"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="6dp" />

            </FrameLayout>

            <!-- Main Content Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp">

                    <!-- App Title Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="EMSI SmartPresence"
                        android:textColor="@color/dark_green"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="32dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="L'innovation et l'intelligence au service de la gestion des présences"
                        android:textAlignment="center"
                        android:textColor="@color/text_secondary1"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp" />

                    <!-- Page Title Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Gestion Absences"
                        android:textColor="@color/text_primary1"
                        android:textSize="28sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="32dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Gérez les absences de vos étudiants"
                        android:textColor="@color/text_secondary1"
                        android:textSize="16sp" />

                    <!-- Groupe Spinner -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="@color/input_background"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:boxStrokeColor="@color/primary_green"
                        app:startIconDrawable="@drawable/ic_graduation_cap"
                        app:startIconTint="@color/dark_green"
                        app:hintTextColor="@color/dark_green">

                        <Spinner
                            android:id="@+id/spinnerGroupe"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:minHeight="48dp"
                            android:paddingHorizontal="16dp"
                            android:background="@android:color/transparent" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Site Spinner -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="@color/input_background"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:boxStrokeColor="@color/primary_green"
                        app:startIconDrawable="@drawable/ic_calendar"
                        app:startIconTint="@color/dark_green"
                        app:hintTextColor="@color/dark_green">

                        <Spinner
                            android:id="@+id/spinnerSite"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:minHeight="48dp"
                            android:paddingHorizontal="16dp"
                            android:background="@android:color/transparent" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Seance Spinner -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="@color/input_background"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:boxStrokeColor="@color/primary_green"
                        app:startIconDrawable="@drawable/ic_book1"
                        app:startIconTint="@color/dark_green"
                        app:hintTextColor="@color/dark_green">

                        <Spinner
                            android:id="@+id/spinnerSeance"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:minHeight="48dp"
                            android:paddingHorizontal="16dp"
                            android:background="@android:color/transparent" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Students List Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Liste des étudiants"
                        android:textColor="@color/text_primary1"
                        android:textSize="18sp" />

                    <!-- RecyclerView in styled container -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        android:layout_marginBottom="20dp"
                        android:backgroundTint="@color/input_background">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewEtudiants"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:contentDescription="@string/liste_etudiants" />
                    </androidx.cardview.widget.CardView>

                    <!-- Remarque Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="32dp"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="@color/input_background"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:boxStrokeColor="@color/primary_green"
                        app:startIconDrawable="@drawable/ic_email1"
                        app:startIconTint="@color/dark_green"
                        app:hintTextColor="@color/dark_green">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextRemarqueGroupe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Remarque générale"
                            android:minHeight="48dp"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Action Buttons -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnValider"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="16dp"
                        android:backgroundTint="@color/dark_green"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Sauvegarder les absences"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textAllCaps="false"
                        app:cornerRadius="28dp"
                        app:elevation="8dp"
                        app:icon="@drawable/ic_person_add"
                        app:iconGravity="textStart"
                        app:iconPadding="12dp"
                        app:iconTint="@color/white" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnHistorique"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:backgroundTint="@color/dark_green"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Voir l'historique"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textAllCaps="false"
                        app:cornerRadius="28dp"
                        app:elevation="8dp"
                        app:icon="@drawable/ic_person_add"
                        app:iconGravity="textStart"
                        app:iconPadding="12dp"
                        app:iconTint="@color/white" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Additional Features Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Gestion intelligente des présences"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:alpha="0.8" />



            </LinearLayout>


        </LinearLayout>
    </ScrollView>
    <!-- Bottom navigation bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="8dp"
        android:elevation="8dp">

        <LinearLayout
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                app:tint="@color/dark_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accueil"
                android:textColor="@color/dark_green"
                android:textSize="10sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/searchButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                app:tint="@color/dark_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recherche"
                android:textColor="@color/dark_gray"
                android:textSize="10sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_menu"
                app:tint="@color/dark_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textColor="@color/dark_gray"
                android:textSize="10sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>